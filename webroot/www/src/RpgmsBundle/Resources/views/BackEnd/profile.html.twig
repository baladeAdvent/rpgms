{% extends "RpgmsBundle:Default:base.html.twig" %}

{% block body %}
    {% include 'RpgmsBundle:BackEnd:dashboardHeader.html.twig' %}
    
    <h4>User Info:</h4>
    <div class="row">
        <div class="col-xs-2">Username:</div>
        <div class="col-xs-10"><input type="text" value="{{app.user.getUsername}}" class="form-control"/> </div>
    </div>
    <div class="row">
        <div class="col-xs-2">Email:</div>
        <div class="col-xs-10"><input type="text" value="{{app.user.email}}" class="form-control"/> </div>
    </div>
    <h4>Password Reset:</h4>
    <div class="row">
        <div class="col-xs-2">Old Password:</div>
        <div class="col-xs-10"><input type="text" value="" class="form-control"/> </div>
    </div>
    <div class="row">
        <div class="col-xs-2">New Password:</div>
        <div class="col-xs-10"><input type="text" value="" class="form-control"/> </div>
    </div>
    
    {{ dump(app.user) }}
{% endblock %}